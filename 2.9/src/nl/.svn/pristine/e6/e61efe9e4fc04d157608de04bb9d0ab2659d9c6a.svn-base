		 */
		public static function postData(url: String,
										   data: Object,
										   onComplete: Function,
										   onError: Function = null,
										   contentType: String = "application/octet-stream"
										  ): URLLoader
		{
			return getXml(url,
						   onComplete,
						   function (d: URLVariables): Object { return data; },
						   onError,
						   true,
						   contentType);
		}
		
